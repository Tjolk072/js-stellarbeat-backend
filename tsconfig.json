{
  "extends": "./node_modules/@sentry/typescript/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "es2016",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "types": ["node", "jest", "reflect-metadata"],
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}