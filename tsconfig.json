{
  "compilerOptions": {
    "rootDirs": ["src","test"],
    "target": "es2016",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "types": ["node", "jest", "reflect-metadata"],
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}